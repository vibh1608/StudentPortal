<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLightGrey"
        android:elevation="5dp"
        android:id="@+id/custom_toolbar_account">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_blue_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                fontPath="fonts/LobsterTwo-Italic.otf"
                android:text="Student Portal"
                android:layout_centerInParent="true"
                android:id="@+id/toolbar_title"
                android:textSize="30sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_toolbar_account">

        <RelativeLayout
            android:id="@+id/fullname_rl"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:elevation="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="First Name"
                android:layout_marginLeft="10dp"
                fontPath="fonts/Montserrat_Regular.ttf"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:maxWidth="180dp"
                android:singleLine="true"
                android:id="@+id/fullname_tv"
                android:text="Ashutosh"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorRed"
                fontPath="fonts/Montserrat_Regular.ttf"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_line"
            android:layout_below="@+id/fullname_rl"
            android:id="@+id/tv1"/>

        <RelativeLayout
            android:id="@+id/lastname_rl"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_below="@+id/tv1"
            android:elevation="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Last Name"
                android:layout_marginLeft="10dp"
                fontPath="fonts/Montserrat_Regular.ttf"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:maxWidth="180dp"
                android:singleLine="true"
                android:id="@+id/lastname_tv"
                android:text="Hathidara"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorRed"
                fontPath="fonts/Montserrat_Regular.ttf"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_line"
            android:layout_below="@+id/lastname_rl"
            android:id="@+id/tv2"/>

        <RelativeLayout
            android:id="@+id/password_rl"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_below="@+id/tv2"
            android:elevation="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Change Password"
                android:layout_marginLeft="10dp"
                fontPath="fonts/Montserrat_Regular.ttf"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_line"
            android:layout_below="@+id/password_rl"
            android:id="@+id/tv4"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout_card"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="2dp"
            android:layout_below="@+id/tv4"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/delete_account_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"
                    android:text="Logout"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    fontPath="fonts/Montserrat_Regular.ttf"
                    android:fontFamily="sans-serif-medium"
                    android:layout_centerVertical="true"
                    android:textColor="#FF0000"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>